{
  "expo": {
    "name": "EnrutApp",
    "slug": "enrutapp-mobile",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/logoNegativo.png",
    "scheme": "enrutappmobile",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/logoPositivo.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "ios": {
      "bundleIdentifier": "com.enrutapp.mobile",
      "icon": "./assets/logo.icon",
      "infoPlist": {
        "NSLocationWhenInUseUsageDescription": "EnrutApp necesita acceso a tu ubicación para mostrarte tu posición en el mapa y compartirla con los clientes.",
        "NSLocationAlwaysUsageDescription": "EnrutApp necesita acceso a tu ubicación en segundo plano para el tracking continuo de conductores.",
        "NSLocationAlwaysAndWhenInUseUsageDescription": "EnrutApp necesita acceso a tu ubicación en segundo plano para continuar el tracking mientras conduces.",
        "NSPhotoLibraryUsageDescription": "EnrutApp necesita acceso a tu galería para que puedas cambiar tu foto de perfil.",
        "ITSAppUsesNonExemptEncryption": false,
        "UIBackgroundModes": [
          "location",
          "fetch"
        ]
      },
      "config": {
        "googleMapsApiKey": "YOUR_GOOGLE_MAPS_API_KEY_IOS"
      }
    },
    "android": {
      "adaptiveIcon": {
        "backgroundColor": "#ffffff",
        "foregroundImage": "./assets/logoNegativo.png",
        "monochromeImage": "./assets/logoNegativo.png"
      },
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false,
      "permissions": [
        "ACCESS_FINE_LOCATION",
        "ACCESS_COARSE_LOCATION",
        "ACCESS_BACKGROUND_LOCATION",
        "FOREGROUND_SERVICE",
        "android.permission.ACCESS_COARSE_LOCATION",
        "android.permission.ACCESS_FINE_LOCATION",
        "ACCESS_FINE_LOCATION",
        "ACCESS_COARSE_LOCATION",
        "ACCESS_BACKGROUND_LOCATION",
        "FOREGROUND_SERVICE",
        "android.permission.ACCESS_COARSE_LOCATION",
        "android.permission.ACCESS_FINE_LOCATION"
      ],
      "config": {
        "googleMaps": {
          "apiKey": "YOUR_GOOGLE_MAPS_API_KEY_ANDROID"
        }
      },
      "package": "com.enrutapp.mobile"
    },
    "web": {
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "react-native-bottom-tabs",
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/logoPositivo.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#ffffff",
          "dark": {
            "backgroundColor": "#131316",
            "image": "./assets/logoNegativo.png"
          }
        }
      ],
      "expo-font",
      "expo-secure-store",
      [
        "expo-location",
        {
          "locationAlwaysAndWhenInUsePermission": "EnrutApp necesita acceso a tu ubicación para el tracking de conductores.",
          "locationAlwaysPermission": "EnrutApp necesita acceso a tu ubicación en segundo plano para continuar el tracking mientras conduces.",
          "locationWhenInUsePermission": "EnrutApp necesita acceso a tu ubicación para mostrarte tu posición en el mapa."
        }
      ]
    ],
    "assetBundlePatterns": [
      "**/*"
    ],
    "experiments": {
      "typedRoutes": true,
      "reactCompiler": true
    }
  }
}
